<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#66B1ED"
    tools:context=".presentation.fragments.SelectorIntervalo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.gildaswise.horizontalcounter.HorizontalCounter
            android:id="@+id/horizontal_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-5dp"

            app:textColor="@color/black"
            app:minusButtonColor="@color/black"
            app:plusButtonColor="@color/black"
            app:textSize="16sp"

            app:displayAsInteger="true"
            app:initialValue="30"
            app:maxValue="120"
            app:minValue="1"
            app:stepValue="1"
            android:visibility="invisible"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:checked="true"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Añadir \n descanso a \n mitad de \n tarea?"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:visibility="invisible"/>


        <Button
            android:id="@+id/buttonHechoSel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="-40dp"
            android:text="Siguiente" />

        <Button
            android:id="@+id/buttonVolverSel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="125dp"
            android:layout_marginRight="-50dp"
            android:text="Menu" />

        <TextView
            android:id="@+id/textSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="21sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Ahora podras poner
            cuanto dura tu tarea y añadir o no un
            descanso a mitad"
            />

    </FrameLayout>

</androidx.wear.widget.BoxInsetLayout>